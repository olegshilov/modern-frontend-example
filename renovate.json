{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":enableVulnerabilityAlerts",
    ":prNotPending",
    ":separatePatchReleases",
    ":separateMultipleMajorReleases",
    ":automergePatch",
    ":automergeTesters",
    ":automergeLinters",
    ":automergeTypes",
    ":automergeMinor",
    ":assignAndReview(olegshilov)"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "pin",
  "ignoreScripts": true,
  "packageRules": [
    {
      "labels": ["dependencies", "javascript"],
      "groupName": "web deps",
      "matchManagers": ["npm"]
    }
  ]
}
